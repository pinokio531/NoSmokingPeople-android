                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"/>

            <TextView
                android:id="@+id/img_13text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "7일: 놀이공원 자유이용권"
                android:textColor="#59584c"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/img_13"
                android:layout_marginLeft="10dp"/>


            <TextView
                android:id="@+id/subtext13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "35,000원"
                android:textColor="#59584c"
                android:textSize="11dp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/img_13text"
                android:layout_toRightOf="@+id/img_13"
                android:layout_marginLeft="10dp"/>

            <ProgressBar
                android:id="@+id/progressBa13"
