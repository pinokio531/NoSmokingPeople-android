                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "2주 후"
                android:textColor="#59584c"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/img_3"
                android:layout_marginLeft="10dp"/>


            <TextView
                android:id="@+id/subtext3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "혈액 기능이 좋아지고 폐기능이 좋아집니다."
                android:textColor="#59584c"
                android:textSize="11dp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/img_3text"
                android:layout_toRightOf="@+id/img_3"
                android:layout_marginLeft="10dp"/>

            <ProgressBar
                android:id="@+id/progressBar3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="210dp"
                android:max ="100"
                android:layout_height="13dp"
                android:layout_below="@+id/subtext3"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/img_3"
                android:layout_marginLeft="10dp"
                android:progressDrawable="@drawable/progress_bar"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:elevation="2dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/textbox2">

            <ImageView
