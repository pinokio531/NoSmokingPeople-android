<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="66dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <TextView
            android:id="@+id/presenthealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="다시 찾은 건강"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="30dp"
            android:textColor="#6296ae"
            android:layout_marginLeft="20dp"/>

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:elevation="2dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/textbox2">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@drawable/img_20_m"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"/>

            <TextView
                android:id="@+id/img_1text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "20분 후"
                android:textColor="#59584c"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/img_1"
                android:layout_marginLeft="10dp"/>


            <TextView
                android:id="@+id/subtext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "혈압과 맥박이 정상으로 돌아옵니다."
                android:textColor="#59584c"
                android:textSize="11dp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/img_1text"
                android:layout_toRightOf="@+id/img_1"
                android:layout_marginLeft="10dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="210dp"
                android:max ="100"
                android:layout_height="13dp"
                android:layout_below="@+id/subtext1"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/img_1"
                android:layout_marginLeft="10dp"
                android:progressDrawable="@drawable/progress_bar"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:elevation="2dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/textbox2">

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@drawable/img_12_h"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"/>

            <TextView
                android:id="@+id/img_2text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "12시간 후"
                android:textColor="#59584c"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/img_2"
                android:layout_marginLeft="10dp"/>


            <TextView
                android:id="@+id/subtext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "혈액 속의 산소량이 정상으로 돌아옵니다."
                android:textColor="#59584c"
                android:textSize="11dp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/img_2text"
                android:layout_toRightOf="@+id/img_2"
                android:layout_marginLeft="10dp"/>

            <ProgressBar
                android:id="@+id/progressBar2"
